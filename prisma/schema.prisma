  isSeen            Boolean          @default(false)
  
  // Delivery
  sentViaEmail      Boolean          @default(false)
  sentViaSMS        Boolean          @default(false)
  sentViaPush       Boolean          @default(false)
  
  // Metadata
  createdAt         DateTime         @default(now())
  readAt            DateTime?
  seenAt            DateTime?

  @@index([userId])
  @@index([type])
  @@index([isRead])
  @@index([createdAt])
  @@index([userId, isRead])
}

